<!DOCTYPE html>
<html ng-app="SesList">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <title>Feedback</title>
    <link rel="stylesheet" href="css/bootstrap.min.css"/>
    <link rel="stylesheet" href="css/font-awesome.min.css"/>
    <link rel="stylesheet" href="css/main.css"/>
    <script src="libs/jquery.min.js"></script>
    <script src="libs/angular.min.js"></script>
    <script src="libs/ui-bootstrap-tpls-1.1.2.min.js"></script>
    <script src="libs/angular-bootstrap-multiselect.js"></script>
    <script src="js/seslistapp.js"></script>
</head>
<body class="bg-green">

<div class="sessions-container" ng-controller="SesListController">

    <div>
        <a href="logout" class="pull-right btn btn-default" style="margin-top: 8px">Logout</a>
        <a href="profile" class="pull-right btn btn-default" style="margin-top: 8px">Profile</a>
        <h2>Select a session to start</h2>
        <hr/>
        <button class="btn btn-success form-control" ng-click="toggleOpen()"><i class="fa fa-plus"></i> Add New Session</button>
        <br/>
    </div>
    
    <div ng-show="newsesopen">
        <br/>
        <div>
            <label>Name:</label>
            <input type="text" class="form-control" ng-model="newses.name" placeholder="Name your session..."/>
            <label>Description:</label>
            <textarea rows="2" class="form-control" ng-model="newses.descr" placeholder="Brief description..."></textarea>
            <br/>
            <button class="btn btn-success form-control" ng-click="addNewSession()">Add</button>
        </div>
    </div>
    <br/>
    <hr/>
    <br/>
    <input class="form-control" ng-model="sesSearch" ng-show="!newsesopen" placeholder="Search...">
    <div class="list-group session-list">
        <a href="./set-session?ses={{ses.id}}" class="list-group-item" ng-repeat="ses in sessions | filter:sesSearch">
            <button class="btn btn-danger spatiated-hz pull-right" ng-if="ses.creator == activeUser.id" ng-click="confirmDeleteSession(ses,$event)">
                <i class="fa fa-remove"></i> Delete
            </button>
            <button class="btn btn-info spatiated-hz pull-right" ng-click="openUsers(ses.id,$event)">
                <i class="fa fa-users"></i> Users
            </button>
            <h4 class="list-group-item-heading">{{ses.name}}</h4>
            <p class="list-group-item-text">{{ses.descr}}</p>
        </a>
    </div>


</div>

</body>
</html>